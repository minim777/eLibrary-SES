<!DOCTYPE html>
<html lang="en-AU">
    <%- include('./partials/head.ejs') %>
    <body>
        <div class="tint">
            <div class="pagecontainer">
                <%- include('./partials/nav.ejs') %>
                <main>
                    <div class="specialhead">
                        <h1 class="tableheader1">User Profile</h1>
                    </div>
                      
                        <div id="user-profile" class="specialhead2">
                            <div class="formcontainer">
                                <form  class="data_form">
                                    <p style="font-size: 1.3em; font-weight: bold; text-align: center;">
                                    Change your password
                                    </p>
                                    
                                    <hr>
                                        <label for="Password">Enter current password </label><br>
                                        <input type="password" name="Password" id="password" placeholder="Enter current password" required minlength="4" maxlength="10"><br>

                                        <label for="Password">Enter new password: </label><br>
                                        <input type="password" name="newPassword" id="newpassword" placeholder="Enter new password" required required minlength="4" maxlength="10"><br>
                                
